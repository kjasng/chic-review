# Database Configuration
# For local development with Docker: mongodb://root:example@localhost:27017/chic_review_dev?authSource=admin&replicaSet=rs0
# For production: Use MongoDB Atlas or similar cloud MongoDB service
MONGODB_URI="mongodb://root:example@localhost:27017/chic_review_dev?authSource=admin&replicaSet=rs0&retryWrites=true"

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-at-least-32-characters"

# OAuth Providers (optional)
# Google OAuth: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Email Service Configuration (optional)
# Resend: https://resend.com/
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Redis Cache Configuration (optional)
# For local: redis://localhost:6379
# For production: Use Upstash or similar
REDIS_URL=""

# Environment
NODE_ENV="development"

# Payment Processing (optional)
# Stripe: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""

# AI Services (optional)
OPENAI_API_KEY=""

# File Upload Service (optional)
# UploadThing: https://uploadthing.com/
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Analytics Services (optional)
VERCEL_ANALYTICS_ID=""
POSTHOG_KEY=""
POSTHOG_HOST="https://app.posthog.com"

# Monitoring (optional)
# Sentry: https://sentry.io/
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Additional Security
# Rate limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000"

# Social Media Links (for Footer)
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/chicreview"
NEXT_PUBLIC_LINKEDIN_URL="https://linkedin.com/company/chicreview"
NEXT_PUBLIC_YOUTUBE_URL="https://youtube.com/@chicreview"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/chicreview"
NEXT_PUBLIC_TIKTOK_URL="https://tiktok.com/@chicreview"
NEXT_PUBLIC_ZALO_URL="https://zalo.me/chicreview"